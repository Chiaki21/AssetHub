<Window x:Class="AssetHub.AssignAssetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Assign Asset" Height="250" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center">

            <TextBlock x:Name="TxtAssetName" 
                       Text="Assigning: Laptop XYZ" 
                       FontSize="16" FontWeight="Bold" 
                       Foreground="#333"
                       Margin="0,0,0,15"/>
            <TextBlock Text="Select Employee:" Foreground="Gray"/>

            <ComboBox x:Name="CbEmployees" 
                      Height="35" 
                      DisplayMemberPath="FullName" 
                      SelectedValuePath="EmployeeId"
                      Margin="0,0,0,20"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Cancel" Width="80" Height="30" Margin="0,0,10,0"
                        Click="BtnCancel_Click"/>
                <Button Content="Confirm Assignment" Width="140" Height="30"
                        Background="#007ACC" Foreground="White"
                        Click="BtnConfirm_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>