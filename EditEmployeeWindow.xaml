<Window x:Class="AssetHub.EditEmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Employee Profile" Height="550" Width="400" 
        WindowStartupLocation="CenterOwner" Background="#F8FAFC">
    <StackPanel Margin="30">
        <TextBlock Text="Edit Employee" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" Foreground="#1E293B"/>

        <TextBlock Text="Full Name" Foreground="#64748B" Margin="0,10,0,5"/>
        <TextBox x:Name="TxtFullName" Padding="10" Height="40" VerticalContentAlignment="Center"/>

        <TextBlock Text="Email Address" Foreground="#64748B" Margin="0,10,0,5"/>
        <TextBox x:Name="TxtEmail" Padding="10" Height="40" VerticalContentAlignment="Center"/>

        <TextBlock Text="Department" Foreground="#64748B" Margin="0,10,0,5"/>
        <ComboBox x:Name="CmbDepartment" Height="40" Padding="10,5">
            <ComboBoxItem Content="IT"/>
            <ComboBoxItem Content="HR"/>
            <ComboBoxItem Content="Finance"/>
            <ComboBoxItem Content="Marketing"/>
            <ComboBoxItem Content="Operations"/>
        </ComboBox>

        <TextBlock Text="Position / Job Title" Foreground="#64748B" Margin="0,10,0,5"/>
        <TextBox x:Name="TxtJobTitle" Padding="10" Height="40" VerticalContentAlignment="Center"/>

        <UniformGrid Columns="2" Margin="0,30,0,0">
            <Button Content="Cancel" IsCancel="True" Background="Transparent" BorderThickness="0" Foreground="#64748B"/>

            <Button Content="Update Profile" Click="BtnSave_Click" Background="#2563EB" Foreground="White" FontWeight="Bold" Height="40">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
        </UniformGrid>
    </StackPanel>
</Window>