<Window x:Class="AssetHub.AddAssetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Add New Asset" Height="400" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="#F8F9FA">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Add New Asset" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" Foreground="#0F172A"/>

            <TextBlock Text="Asset Name" Margin="0,10,0,5" FontWeight="SemiBold" Foreground="#64748B"/>
            <Border BorderBrush="#CBD5E1" BorderThickness="1" CornerRadius="4" Background="White">
                <TextBox x:Name="TxtAssetName" 
                         Height="35" 
                         Padding="10,0" 
                         VerticalContentAlignment="Center" 
                         BorderThickness="0" 
                         Background="Transparent"/>
            </Border>

            <TextBlock Text="Asset Type" Margin="0,15,0,5" FontWeight="SemiBold" Foreground="#64748B"/>
            <Border BorderBrush="#CBD5E1" BorderThickness="1" CornerRadius="4" Background="White">
                <ComboBox x:Name="CbAssetType" 
                          Height="35" 
                          Padding="10,0" 
                          VerticalContentAlignment="Center" 
                          BorderThickness="0" 
                          Background="Transparent">
                    <ComboBoxItem Content="Laptop"/>
                    <ComboBoxItem Content="Mobile Phone"/>
                    <ComboBoxItem Content="Monitor"/>
                    <ComboBoxItem Content="Peripheral"/>
                </ComboBox>
            </Border>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,40,0,0">
                <Button Content="CANCEL" Click="BtnCancel_Click" 
                        Background="Transparent" BorderBrush="Transparent" Foreground="#64748B" Margin="0,0,10,0"/>
                <Button Content="SAVE ASSET" Click="BtnSave_Click" 
                        Background="#10B981" BorderBrush="#10B981" Foreground="White" 
                        FontWeight="Bold" Padding="20,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>