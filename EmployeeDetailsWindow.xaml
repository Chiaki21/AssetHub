<Window x:Class="AssetHub.EmployeeDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Employee Details" Height="350" Width="300" 
        WindowStyle="None" AllowsTransparency="True" Background="Transparent" 
        WindowStartupLocation="CenterOwner">

    <Border CornerRadius="20" Background="White" BorderBrush="#E2E8F0" BorderThickness="1">
        <StackPanel Margin="20">
            <Button HorizontalAlignment="Right" Content="✕" Click="Close_Click" Background="Transparent" BorderThickness="0" Foreground="Gray"/>

            <Border Width="80" Height="80" CornerRadius="40" Background="#2563EB" Margin="0,10">
                <TextBlock x:Name="TxtInitials" Text="JD" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="28" FontWeight="Bold" Foreground="White"/>
            </Border>

            <TextBlock x:Name="TxtName" Text="John Doe" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#1E293B"/>
            <TextBlock x:Name="TxtJobTitle" Text="Software Engineer" FontSize="14" HorizontalAlignment="Center" Foreground="#64748B" Margin="0,5"/>

            <Separator Margin="0,15" Background="#F1F5F9"/>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <materialDesign:PackIcon Kind="EmailOutline" Foreground="#3B82F6" VerticalAlignment="Center"/>
                <TextBlock x:Name="TxtEmail" Text="john.doe@company.com" Margin="10,0" Foreground="#475569"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <materialDesign:PackIcon Kind="OfficeBuilding" Foreground="#3B82F6" VerticalAlignment="Center"/>
                <TextBlock x:Name="TxtDept" Text="Engineering" Margin="10,0" Foreground="#475569"/>
            </StackPanel>

            
        </StackPanel>
    </Border>
</Window>