<Window x:Class="AssetHub.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="AssetHub" Height="800" Width="1600"
        WindowStartupLocation="CenterScreen" Background="#F8FAFC">

    <Grid x:Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#0F172A">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="25,35,25,40">
                    <Border Width="35" Height="35" Background="#3B82F6" CornerRadius="8">
                        <materialDesign:PackIcon Kind="Layers" Foreground="White" Width="22" Height="22" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="AssetHub" Foreground="White" FontWeight="Bold" FontSize="22" Margin="15,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Row="1" Margin="15,0">
                    <RadioButton Style="{StaticResource MaterialDesignTabRadioButton}"
                                 x:Name="BtnDashboard" Click="BtnDashboard_Click" IsChecked="True"
                                 Height="50" Foreground="#94A3B8" BorderThickness="0" 
                                 HorizontalContentAlignment="Left">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="ViewDashboardOutline" Width="20" Height="20" Margin="10,0,15,0"/>
                            <TextBlock Text="Dashboard" VerticalAlignment="Center" FontSize="15" FontWeight="SemiBold"/>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton Style="{StaticResource MaterialDesignTabRadioButton}"
                                 x:Name="BtnAssets" Click="BtnAssets_Click" Margin="0,5,0,0"
                                 Height="50" Foreground="#94A3B8" BorderThickness="0" 
                                 HorizontalContentAlignment="Left">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="PackageVariantClosed" Width="20" Height="20" Margin="10,0,15,0"/>
                            <TextBlock Text="Inventory" VerticalAlignment="Center" FontSize="15" FontWeight="SemiBold"/>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton Style="{StaticResource MaterialDesignTabRadioButton}"
                                 x:Name="BtnEmployees" Click="BtnEmployees_Click" Margin="0,5,0,0"
                                 Height="50" Foreground="#94A3B8" BorderThickness="0" 
                                 HorizontalContentAlignment="Left">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="AccountGroupOutline" Width="20" Height="20" Margin="10,0,15,0"/>
                            <TextBlock Text="Employees" VerticalAlignment="Center" FontSize="15" FontWeight="SemiBold"/>
                        </StackPanel>
                    </RadioButton>
                </StackPanel>

                <StackPanel Grid.Row="2" Margin="15,0,15,30">
                    <Separator Background="#1E293B" Margin="10,0,10,20"/>
                    <Grid Margin="10,0,10,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Border Width="40" Height="40" CornerRadius="20" Background="#3B82F6">
                            <TextBlock x:Name="txtUserInitials" Text="JU" Foreground="White" FontWeight="Bold" 
                                       VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                        <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center">
                            <TextBlock x:Name="txtUserDisplay" Text="Username" Foreground="White" FontSize="12" FontWeight="SemiBold" TextTrimming="CharacterEllipsis"/>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="ShieldCheck" Foreground="#3B82F6" Width="12" Height="12" VerticalAlignment="Center"/>
                                <TextBlock x:Name="txtRoleDisplay" Text="Administrator" Foreground="#94A3B8" FontSize="10" Margin="4,0,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                    <Button x:Name="BtnSignOut" Click="BtnSignOut_Click" 
                            Background="Transparent" BorderBrush="Transparent" Foreground="#94A3B8"
                            Height="45" HorizontalContentAlignment="Left" Padding="10,0" Cursor="Hand">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Logout" Width="20" Height="20" Margin="0,0,15,0" Foreground="#E11D48"/>
                            <TextBlock Text="Log Out" VerticalAlignment="Center" FontSize="14" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Background="White" BorderBrush="#E2E8F0" BorderThickness="0,0,0,1" Height="80">
                <Grid Margin="40,0">
                    <TextBlock x:Name="PageTitle" Text="Dashboard" FontSize="22" FontWeight="Bold" 
                               VerticalAlignment="Center" Foreground="#0F172A"/>
                </Grid>
            </Border>

            <Frame x:Name="MainContentFrame" 
                   Grid.Row="1"
                   NavigationUIVisibility="Hidden" 
                   HorizontalAlignment="Stretch" 
                   VerticalAlignment="Stretch"/>

            <materialDesign:Snackbar x:Name="MainSnackbar" 
                                     MessageQueue="{materialDesign:MessageQueue}"
                                     Grid.Row="1"
                                     VerticalAlignment="Bottom"
                                     HorizontalAlignment="Center"
                                     Margin="0,0,0,30"/>
        </Grid>
    </Grid>
</Window>