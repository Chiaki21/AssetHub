<Window x:Class="AssetHub.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="AssetHub" Height="700" Width="1100"
        WindowStartupLocation="CenterScreen" Background="#F8F9FA">

   

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#0F172A">
            <Grid>
                <StackPanel>
                    <TextBlock Text="AssetHub" Foreground="White" FontWeight="Bold" FontSize="20" Margin="20"/>
                    <Button x:Name="BtnDashboard" Click="BtnDashboard_Click" Content="Dashboard" Foreground="White" Height="45" Background="Transparent" BorderBrush="Transparent"/>
                    <Button x:Name="BtnEmployees" Click="BtnEmployees_Click" Content="Employees" Foreground="White" Height="45" Background="Transparent" BorderBrush="Transparent"/>
                    <Button x:Name="BtnAssets" Click="BtnAssets_Click" Content="Assets" Foreground="White" Height="45" Background="Transparent" BorderBrush="Transparent"/>
                </StackPanel>

                <Button Content="SIGN OUT" 
                VerticalAlignment="Bottom" 
                Margin="20" 
                Background="#E11D48" 
                Foreground="White" 
                FontWeight="Bold" 
                Click="BtnSignOut_Click"/>
            </Grid>
        </Border>

        <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock x:Name="PageTitle" Text="Dashboard" FontSize="24" FontWeight="Bold" Margin="30,30,0,10" Foreground="#1E293B"/>

                <Frame x:Name="MainContentFrame" 
                       Grid.Row="1"
                       NavigationUIVisibility="Hidden" 
                       HorizontalAlignment="Stretch" 
                       VerticalAlignment="Stretch" 
                       Background="White"/>
            </Grid>
        </Grid>


</Window>