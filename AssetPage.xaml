<Page x:Class="AssetHub.AssetPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Title="Assets" Background="#F8F9FA">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Asset Inventory" 
                       FontSize="28" 
                       FontWeight="Bold" 
                       VerticalAlignment="Center"
                       Foreground="#1E293B"/>

            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                <Button Content="📄 Generate Report (PDF)" 
                        Click="BtnExportPDF_Click" 
                        Margin="0,0,10,0" 
                        Padding="15,5" 
                        Background="#3498DB" 
                        Foreground="White"
                        BorderBrush="Transparent"
                        FontWeight="SemiBold"
                        Height="40">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="6"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <Button Content="+ ADD ASSET" 
                        Background="#10B981" 
                        BorderBrush="Transparent" 
                        Foreground="White" 
                        FontWeight="Bold" 
                        Padding="15,5" 
                        Height="40"
                        Click="BtnAddAsset_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="6"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Border BorderBrush="#CBD5E1" BorderThickness="1" CornerRadius="8" Background="White" Height="45">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="45"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <materialDesign:PackIcon Kind="Magnify" Width="20" Height="20" 
                                            VerticalAlignment="Center" HorizontalAlignment="Center" 
                                            Foreground="#64748B"/>

                    <TextBox x:Name="txtSearch" 
                             Grid.Column="1"
                             VerticalAlignment="Center"
                             BorderThickness="0"
                             Background="Transparent"
                             FontSize="14"
                             VerticalContentAlignment="Center"
                             Margin="5,0,15,0"
                             materialDesign:HintAssist.Hint="Search assets by name or serial..."
                             TextChanged="txtSearch_TextChanged"/>
                </Grid>
            </Border>
        </Grid>

        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="AssetItemsControl">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <materialDesign:Card Margin="0,0,0,10" Padding="15" UniformCornerRadius="8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <materialDesign:PackIcon Kind="Laptop" Width="30" Height="30" Foreground="#3B82F6" VerticalAlignment="Center"/>

                                <StackPanel Grid.Column="1" Margin="20,0,0,0">
                                    <TextBlock Text="{Binding AssetName}" FontSize="16" FontWeight="Bold" Foreground="#1E293B"/>
                                    <TextBlock Text="{Binding AssetType}" Foreground="#64748B"/>
                                </StackPanel>

                                <Border Grid.Column="2" Background="#FEF3C7" CornerRadius="10" Padding="10,5" Margin="0,0,10,0" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Status}" Foreground="#D97706" FontWeight="Bold" FontSize="12"/>
                                </Border>

                                <Button Grid.Column="3" 
                                        Content="Edit" 
                                        Width="60" Height="30" 
                                        Margin="0,0,10,0"
                                        Background="#94A3B8" 
                                        Foreground="White"
                                        BorderBrush="Transparent"
                                        Click="BtnEdit_Click">
                                    <Button.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="4"/>
                                        </Style>
                                    </Button.Resources>
                                </Button>

                                <Button Grid.Column="4" 
                                        Content="ASSIGN" 
                                        Click="BtnAssign_Click" 
                                        Padding="15,5"
                                        Height="30"
                                        Background="#2563EB" 
                                        Foreground="White"
                                        BorderBrush="Transparent"
                                        FontWeight="Bold"
                                        VerticalAlignment="Center">
                                    <Button.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="4"/>
                                        </Style>
                                    </Button.Resources>
                                </Button>

                                <Button Grid.Column="5" 
                                        Background="Transparent" 
                                        BorderBrush="Transparent" 
                                        Click="BtnDelete_Click" 
                                        Margin="10,0,0,0"
                                        Padding="5"
                                        VerticalAlignment="Center">
                                    <materialDesign:PackIcon Kind="Delete" Foreground="#EF4444" Width="22" Height="22"/>
                                </Button>
                            </Grid>
                        </materialDesign:Card>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>