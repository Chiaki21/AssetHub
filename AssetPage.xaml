<Page x:Class="AssetHub.AssetPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Title="Assets" Background="#F8FAFC">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />

        <Style x:Key="StatusBadgeButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="BadgeBorder" 
                                Padding="10,4" 
                                CornerRadius="12" 
                                Background="{TemplateBinding Background}"
                                RenderTransformOrigin="0.5,0.5">
                            <Border.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="BadgeBorder" Property="Background" Value="#E2E8F0"/>
                                <Setter TargetName="BadgeBorder" Property="Opacity" Value="0.8"/>
                                <Setter Property="RenderTransform" TargetName="BadgeBorder">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" Margin="0,0,0,30">
            <StackPanel>
                <TextBlock Text="Asset Inventory" FontSize="32" FontWeight="Bold" Foreground="#1E293B"/>
                <TextBlock Text="Manage and track company hardware and software licenses." Foreground="#64748B" FontSize="14" Margin="0,5,0,0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top">
                <Button Content="📄 Generate Report" Click="BtnExportPDF_Click" Background="White" Foreground="#1E293B" BorderBrush="#E2E8F0" Padding="20,0" FontWeight="SemiBold" Margin="0,0,10,0" Height="45" VerticalContentAlignment="Center">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <Button Content="+ Add Asset" Click="BtnAddAsset_Click" Background="#2563EB" Foreground="White" BorderThickness="0" Padding="20,0" FontWeight="SemiBold" Height="45" VerticalContentAlignment="Center">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </DockPanel>

        <Border Grid.Row="1" Background="White" BorderBrush="#E2E8F0" BorderThickness="1" CornerRadius="8" Margin="0,0,0,30" Height="45">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="45"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <materialDesign:PackIcon Kind="Magnify" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#94A3B8" Width="22" Height="22"/>
                <TextBox x:Name="txtSearch" Grid.Column="1" Background="Transparent" BorderThickness="0" VerticalContentAlignment="Center" Margin="5,0" TextChanged="txtSearch_TextChanged" materialDesign:HintAssist.Hint="Search assets..."/>
            </Grid>
        </Border>

        <Grid Grid.Row="2" Margin="20,0,20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2.5*"/>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="1.2*"/>
                <ColumnDefinition Width="1.8*"/>
                <ColumnDefinition Width="150"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Asset Details" Foreground="#64748B" FontWeight="SemiBold" FontSize="12"/>
            <TextBlock Grid.Column="1" Text="Serial Number" Foreground="#64748B" FontWeight="SemiBold" FontSize="12"/>
            <TextBlock Grid.Column="2" Text="Price" Foreground="#64748B" FontWeight="SemiBold" FontSize="12"/>
            <TextBlock Grid.Column="3" Text="Status &amp; Owner" Foreground="#64748B" FontWeight="SemiBold" FontSize="12"/>
            <TextBlock Grid.Column="4" Text="Actions" Foreground="#64748B" FontWeight="SemiBold" FontSize="12" HorizontalAlignment="Center"/>
        </Grid>

        <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="AssetItemsControl">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="White" BorderBrush="#E2E8F0" BorderThickness="0,0,0,1" Padding="20,15">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2.5*"/>
                                    <ColumnDefinition Width="1.5*"/>
                                    <ColumnDefinition Width="1.2*"/>
                                    <ColumnDefinition Width="1.8*"/>
                                    <ColumnDefinition Width="150"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="{Binding AssetIcon}" Width="24" Height="24" Foreground="#3B82F6" VerticalAlignment="Center"/>
                                    <StackPanel Margin="15,0,0,0">
                                        <TextBlock Text="{Binding AssetName}" FontWeight="Bold" Foreground="#1E293B"/>
                                        <TextBlock Text="{Binding AssetType}" Foreground="#64748B" FontSize="12"/>
                                    </StackPanel>
                                </StackPanel>

                                <TextBlock Grid.Column="1" Text="{Binding SerialNumber}" VerticalAlignment="Center" Foreground="#475569" FontFamily="Consolas"/>

                                <TextBlock Grid.Column="2" Text="{Binding Price, StringFormat=\{0:C2\}}" VerticalAlignment="Center" Foreground="#1E293B"/>

                                <StackPanel Grid.Column="3" VerticalAlignment="Center">
                                    <Button Click="BtnStatus_Click" 
                                            Style="{StaticResource StatusBadgeButtonStyle}"
                                            Background="{Binding StatusBgColor}"
                                            HorizontalAlignment="Left">
                                        <StackPanel Orientation="Horizontal" Margin="10,0">
                                            <TextBlock Text="{Binding Status}" 
                                                       Foreground="{Binding StatusFgColor}" 
                                                       FontSize="11" 
                                                       FontWeight="Bold"
                                                       VerticalAlignment="Center"/>
                                            <materialDesign:PackIcon Kind="InformationOutline" 
                                                                     Visibility="{Binding AssignedEmployee, Converter={StaticResource BoolToVis}}"
                                                                     Width="14" Height="14" 
                                                                     Foreground="{Binding StatusFgColor}" 
                                                                     Margin="6,0,0,0"
                                                                     VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>
                                </StackPanel>

                                <StackPanel Grid.Column="4" Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Click="BtnAssign_Click" Background="Transparent" BorderThickness="0" ToolTip="Assign">
                                        <materialDesign:PackIcon Kind="AccountPlusOutline" Foreground="#2563EB" Width="20" Height="20"/>
                                    </Button>
                                    <Button Click="BtnUnassign_Click" Background="Transparent" BorderThickness="0" ToolTip="Unassign" Margin="8,0,0,0">
                                        <materialDesign:PackIcon Kind="LinkOff" Foreground="#EA580C" Width="20" Height="20"/>
                                    </Button>
                                    <Button Click="BtnDelete_Click" Background="Transparent" BorderThickness="0" ToolTip="Delete" Margin="8,0,0,0">
                                        <materialDesign:PackIcon Kind="DeleteOutline" Foreground="#EF4444" Width="20" Height="20"/>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>