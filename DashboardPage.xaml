<Page x:Class="AssetHub.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Background="#F8FAFC"
      Title="Dashboard">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="System Overview" FontSize="28" FontWeight="Bold" Foreground="#1E293B" Margin="0,0,0,25"/>

        <Grid Grid.Row="1" Margin="0,0,0,25">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="#3B82F6" CornerRadius="12" Margin="0,0,10,0" Padding="20">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" Opacity="0.1" ShadowDepth="2"/>
                </Border.Effect>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock Text="Total Assets" Foreground="#DBEAFE" FontSize="14" FontWeight="SemiBold"/>
                        <TextBlock x:Name="TxtTotalAssets" Text="0" Foreground="White" FontSize="36" FontWeight="Bold" Margin="0,5,0,0"/>
                    </StackPanel>
                    <materialDesign:PackIcon Grid.Column="1" Kind="PackageVariantClosed" Width="30" Height="30" Foreground="#DBEAFE" Opacity="0.5" VerticalAlignment="Top"/>
                </Grid>
            </Border>

            <Border Grid.Column="1" Background="#F97316" CornerRadius="12" Margin="10,0,10,0" Padding="20">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" Opacity="0.1" ShadowDepth="2"/>
                </Border.Effect>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock Text="Assigned" Foreground="#FFEDD5" FontSize="14" FontWeight="SemiBold"/>
                        <TextBlock x:Name="TxtAssignedAssets" Text="0" Foreground="White" FontSize="36" FontWeight="Bold" Margin="0,5,0,0"/>
                    </StackPanel>
                    <materialDesign:PackIcon Grid.Column="1" Kind="AccountCheck" Width="30" Height="30" Foreground="#FFEDD5" Opacity="0.5" VerticalAlignment="Top"/>
                </Grid>
            </Border>

            <Border Grid.Column="2" Background="#22C55E" CornerRadius="12" Margin="10,0,10,0" Padding="20">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" Opacity="0.1" ShadowDepth="2"/>
                </Border.Effect>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock Text="Available" Foreground="#DCFCE7" FontSize="14" FontWeight="SemiBold"/>
                        <TextBlock x:Name="TxtAvailableAssets" Text="0" Foreground="White" FontSize="36" FontWeight="Bold" Margin="0,5,0,0"/>
                    </StackPanel>
                    <materialDesign:PackIcon Grid.Column="1" Kind="CheckCircle" Width="30" Height="30" Foreground="#DCFCE7" Opacity="0.5" VerticalAlignment="Top"/>
                </Grid>
            </Border>

            <Border Grid.Column="3" Background="#6366F1" CornerRadius="12" Margin="10,0,0,0" Padding="20">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" Opacity="0.1" ShadowDepth="2"/>
                </Border.Effect>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock Text="Inventory Value" Foreground="#E0E7FF" FontSize="14" FontWeight="SemiBold"/>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBlock x:Name="TxtTotalValue" Text="₱ ••••••" Foreground="White" FontSize="32" FontWeight="Bold" VerticalAlignment="Center"/>
                            <Button x:Name="BtnToggleValue" Click="BtnToggleValue_Click" 
                        Style="{StaticResource MaterialDesignIconButton}" 
                        Width="30" Height="30" Margin="10,0,0,0" Foreground="#E0E7FF">
                                <materialDesign:PackIcon x:Name="IconPrivacy" Kind="EyeOutline" Width="18" Height="18"/>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                    <materialDesign:PackIcon Grid.Column="1" Kind="Cash" Width="30" Height="30" Foreground="#E0E7FF" Opacity="0.5" VerticalAlignment="Top"/>
                </Grid>
            </Border>
        </Grid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1.2*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                <Border Background="White" CornerRadius="12" BorderBrush="#E2E8F0" BorderThickness="1" Margin="0,0,0,20">
                    <Grid Margin="25">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="150"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Asset Distribution" FontSize="18" FontWeight="Bold" Foreground="#1E293B" Margin="0,0,0,15"/>
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <ItemsControl x:Name="CategorySummaryControl">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="#F1F5F9" BorderThickness="0,0,0,1" Padding="0,10">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="{Binding Category}" Foreground="#475569" FontSize="14" VerticalAlignment="Center"/>
                                                <Border Grid.Column="1" Background="#EFF6FF" CornerRadius="10" Padding="12,4">
                                                    <TextBlock Text="{Binding Count}" Foreground="#2563EB" FontWeight="Bold" FontSize="12"/>
                                                </Border>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </Border>

                <Border Background="White" CornerRadius="12" BorderBrush="#E2E8F0" BorderThickness="1">
                    <Grid Margin="25">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="250"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Recent Employees" FontSize="18" FontWeight="Bold" Foreground="#1E293B" Margin="0,0,0,15"/>

                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <ItemsControl x:Name="RecentEmployeesControl">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="#F1F5F9" BorderThickness="0,0,0,1" Padding="0,10">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <Border Width="35" Height="35" CornerRadius="17.5" Background="#DBEAFE">
                                                    <TextBlock Text="{Binding Initials}" FontSize="12" FontWeight="Bold" Foreground="#2563EB" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                </Border>
                                                <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding FullName}" FontWeight="SemiBold" Foreground="#1E293B" FontSize="13"/>
                                                    <TextBlock Text="{Binding JobTitle}" Foreground="#64748B" FontSize="11"/>
                                                </StackPanel>
                                                <TextBlock Grid.Column="2" Text="{Binding DateAdded, StringFormat=\{0:MMM dd\}}" Foreground="#94A3B8" FontSize="11" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </StackPanel>

            <Border Grid.Column="1" Background="White" CornerRadius="12" BorderBrush="#E2E8F0" BorderThickness="1" Margin="10,0,0,0">
                <Grid Margin="25">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Recent Activity" FontSize="18" FontWeight="Bold" Foreground="#1E293B" Margin="0,0,0,15"/>
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="ActivityFeedControl">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,0,0,15">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                            <Ellipse Width="8" Height="8" Fill="#3B82F6"/>
                                            <Rectangle Width="1" Height="35" Fill="#E2E8F0" Margin="0,2,0,0"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="1" Margin="12,-2,0,0">
                                            <TextBlock Text="{Binding Description}" FontSize="13" Foreground="#334155" TextWrapping="Wrap"/>
                                            <TextBlock Text="{Binding TimeAgo}" FontSize="11" Foreground="#94A3B8" Margin="0,2,0,0"/>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

        <TextBlock Grid.Row="3" Text="Recent Database Status: Connected" VerticalAlignment="Bottom" Foreground="#94A3B8" FontStyle="Italic" Margin="0,20,0,0"/>
    </Grid>
</Page>