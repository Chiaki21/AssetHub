<Window x:Class="AssetHub.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Login" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="#F0F2F5">

    <Border Background="White" Width="350" Height="400" CornerRadius="10">
        <StackPanel Margin="30">
            <materialDesign:PackIcon Kind="Cube" Width="50" Height="50" Foreground="#673AB7" HorizontalAlignment="Center" Margin="0,0,0,20"/>
            <TextBlock Text="Welcome Back" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,30" Foreground="#333"/>

            <TextBlock Text="Username" Foreground="Gray" Margin="0,0,0,5"/>
            <TextBox x:Name="txtUsername" 
                     Height="40"
                     VerticalContentAlignment="Center"
                     Padding="5"
                     Margin="0,0,0,20" FontSize="16"/>

            <TextBlock Text="Password" Foreground="Gray" Margin="0,0,0,5"/>
            <PasswordBox x:Name="txtPassword" 
                         Height="40"
                         VerticalContentAlignment="Center"
                         Padding="5"
                         Margin="0,0,0,30" FontSize="16"/>

            <Button Content="LOGIN" Height="45" IsDefault="True" Click="BtnLogin_Click" Background="DarkBlue" BorderBrush="DarkBlue" Foreground="White"/>

            <TextBlock x:Name="lblError" Text="Invalid Credentials" Foreground="Red" HorizontalAlignment="Center" Margin="0,20,0,0" Visibility="Hidden"/>

            <Button Content="Exit" Background="Gray" BorderBrush="Gray" Click="BtnExit_Click" Margin="0,10,0,0"/>
        </StackPanel>
    </Border>
</Window>