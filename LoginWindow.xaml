<Window x:Class="AssetHub.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Login" Height="700" Width="900"
        WindowStartupLocation="CenterScreen" WindowStyle="None"
        AllowsTransparency="True" ResizeMode="NoResize" Background="Transparent">

    <Window.Resources>
        <Style x:Key="ExitButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#1E293B"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="20">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#EF4444"/>
                    <Setter Property="Background" Value="#FEE2E2"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Border Background="#F0F2F5" CornerRadius="12">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" Opacity="0.2" ShadowDepth="2" Color="Black"/>
            </Border.Effect>
        </Border>

        <Button HorizontalAlignment="Right" VerticalAlignment="Top" Margin="15" Width="32" Height="32"
                Style="{StaticResource ExitButtonStyle}" Click="BtnExit_Click" Panel.ZIndex="100">
            <materialDesign:PackIcon Kind="Close" Width="22" Height="22"/>
        </Button>

        <Viewbox Stretch="Uniform" MaxHeight="550">
            <Grid Width="400">
                <Border x:Name="BorderLogin" Background="White" Padding="40,35" CornerRadius="20" Visibility="Visible">
                    <StackPanel>
                        <materialDesign:PackIcon Kind="Layers" Width="64" Height="64" Foreground="#2563EB" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                        <TextBlock Text="AssetHub" FontSize="32" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#1E293B"/>

                        <TextBlock Text="Email Address" Foreground="#64748B" FontWeight="SemiBold" Margin="0,30,0,8" FontSize="12"/>
                        <TextBox x:Name="txtEmail" Height="45" VerticalContentAlignment="Center" Padding="12,0" 
                                 materialDesign:TextFieldAssist.UnderlineBrush="#2563EB"/>

                        <TextBlock Text="Password" Foreground="#64748B" FontWeight="SemiBold" Margin="0,20,0,8" FontSize="12"/>
                        <PasswordBox x:Name="txtPassword" Height="45" VerticalContentAlignment="Center" Padding="12,0"
                                     materialDesign:TextFieldAssist.UnderlineBrush="#2563EB"/>

                        <CheckBox x:Name="chkRememberMe" 
          Content="Remember Me" 
          Foreground="#64748B" 
          FontSize="12" 
          Margin="0,10,0,0"
          Style="{StaticResource MaterialDesignCheckBox}" />

                        <TextBlock x:Name="lblError" Text="Invalid Credentials" Foreground="#EF4444" HorizontalAlignment="Center" Margin="0,10,0,0" Visibility="Hidden"/>

                        <Button Content="SIGN IN" Height="48" Margin="0,20,0,0" Click="BtnLogin_Click" Background="#2563EB" Foreground="White" FontWeight="Bold" materialDesign:ButtonAssist.CornerRadius="10"/>

                        <TextBlock HorizontalAlignment="Center" Margin="0,20,0,0">
                            <Run Text="New here?" Foreground="#64748B"/>
                            <Hyperlink Click="ToggleViews_Click" Foreground="#2563EB" FontWeight="Bold" TextDecorations="None">Create an account</Hyperlink>
                        </TextBlock>
                    </StackPanel>
                </Border>

                <Border x:Name="BorderRegister" Background="White" Padding="40,25" CornerRadius="20" Visibility="Collapsed">
                    <StackPanel>
                        <materialDesign:PackIcon Kind="Layers" Width="50" Height="50" Foreground="#2563EB" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        <TextBlock Text="AssetHub" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#1E293B"/>

                        <TextBlock Text="Full Name" Foreground="#64748B" FontWeight="SemiBold" Margin="0,20,0,0" FontSize="11"/>
                        <TextBox x:Name="txtRegFullName" Height="35" VerticalContentAlignment="Center" Margin="0,0,0,15"
                                 materialDesign:TextFieldAssist.UnderlineBrush="#2563EB"/>

                        <TextBlock Text="Email Address" Foreground="#64748B" FontWeight="SemiBold" Margin="0,5,0,0" FontSize="11"/>
                        <TextBox x:Name="txtRegEmail" Height="35" VerticalContentAlignment="Center" Margin="0,0,0,15"
                                 materialDesign:TextFieldAssist.UnderlineBrush="#2563EB"/>

                        <TextBlock Text="Password" Foreground="#64748B" FontWeight="SemiBold" Margin="0,5,0,0" FontSize="11"/>
                        <Grid Margin="0,0,0,15">
                            <PasswordBox x:Name="txtRegPassword" Height="35" VerticalContentAlignment="Center" Padding="0,0,30,0"
                                         materialDesign:TextFieldAssist.UnderlineBrush="#2563EB"/>
                            <TextBox x:Name="txtRegPasswordVisible" Height="35" VerticalContentAlignment="Center" Visibility="Collapsed"
                                     materialDesign:TextFieldAssist.UnderlineBrush="#2563EB"/>
                            <ToggleButton x:Name="BtnShowPass" HorizontalAlignment="Right" Width="24" Height="24" Margin="0,0,2,0"
                                          Style="{StaticResource MaterialDesignActionLightToggleButton}" Cursor="Hand"
                                          Checked="PasswordToggle_Checked" Unchecked="PasswordToggle_Unchecked">
                                <materialDesign:ToggleButtonAssist.OnContent>
                                    <materialDesign:PackIcon Kind="Eye" Width="16" Height="16"/>
                                </materialDesign:ToggleButtonAssist.OnContent>
                                <materialDesign:PackIcon Kind="EyeOff" Width="16" Height="16"/>
                            </ToggleButton>
                        </Grid>

                        <TextBlock Text="Confirm Password" Foreground="#64748B" FontWeight="SemiBold" Margin="0,5,0,0" FontSize="11"/>
                        <PasswordBox x:Name="txtRegConfirmPassword" Height="35" VerticalContentAlignment="Center"
                                     materialDesign:TextFieldAssist.UnderlineBrush="#2563EB"/>

                        <Button Content="CREATE ACCOUNT" Height="45" Margin="0,25,0,0" Click="BtnRegister_Click" 
                                Background="#2563EB" Foreground="White" FontWeight="Bold" materialDesign:ButtonAssist.CornerRadius="10"/>

                        <TextBlock HorizontalAlignment="Center" Margin="0,15,0,0">
                            <Run Text="Already have an account?" Foreground="#64748B"/>
                            <Hyperlink Click="ToggleViews_Click" Foreground="#2563EB" FontWeight="Bold" TextDecorations="None">Log in</Hyperlink>
                        </TextBlock>
                    </StackPanel>
                </Border>
            </Grid>
        </Viewbox>

        <materialDesign:Snackbar x:Name="MainSnackbar" MessageQueue="{materialDesign:MessageQueue}" VerticalAlignment="Bottom" Margin="0,0,0,20" />
    </Grid>
</Window>