<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:av="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      mc:Ignorable="av" x:Class="AssetHub.EmployeePage"
      Background="#F8FAFC"
      Title="Employee Management" av:DesignHeight="600" av:DesignWidth="1000">

    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" Margin="0,0,0,30">
            <StackPanel>
                <TextBlock Text="Employees" FontSize="32" FontWeight="Bold" Foreground="#1E293B"/>
                <TextBlock Text="Manage employees and their assigned assets." Foreground="#64748B" FontSize="14" Margin="0,5,0,0"/>
            </StackPanel>

            <Button Content="+ Add Employee" 
                    Click="BtnAddEmployee_Click"
                    HorizontalAlignment="Right"
                    Background="#2563EB" 
                    Foreground="White" 
                    BorderThickness="0"
                    FontWeight="SemiBold"
                    Height="40" 
                    Padding="20,0"
                    VerticalContentAlignment="Center"
                    materialDesign:ButtonAssist.CornerRadius="8">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatMidBgButton}">
                        <Setter Property="materialDesign:RippleAssist.Feedback" Value="White"/>
                    </Style>
                </Button.Style>
            </Button>
        </DockPanel>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Background="White" 
                    BorderBrush="#E2E8F0" 
                    BorderThickness="1" 
                    CornerRadius="8" 
                    Margin="0,0,0,30" Height="45">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="45"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <materialDesign:PackIcon Kind="Magnify" 
                                            VerticalAlignment="Center" 
                                            HorizontalAlignment="Center" 
                                            Foreground="#94A3B8"
                                            Width="20" Height="20"/>

                    <TextBox x:Name="txtSearch" 
                             Grid.Column="1" 
                             Background="Transparent" 
                             BorderThickness="0" 
                             VerticalContentAlignment="Center" 
                             Margin="5,0" 
                             TextChanged="txtSearch_TextChanged"
                             materialDesign:HintAssist.Hint="Search by name, email, or department..."
                             materialDesign:TextFieldAssist.DecorationVisibility="Collapsed"/>
                </Grid>
            </Border>

            <Grid Grid.Row="1" Margin="20,0,20,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2.5*"/>
                    <ColumnDefinition Width="1.5*"/>
                    <ColumnDefinition Width="1.5*"/>
                    <ColumnDefinition Width="1.5*"/>
                    <ColumnDefinition Width="1.5*"/>
                    <ColumnDefinition Width="80"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Employee" Foreground="#64748B" FontWeight="SemiBold" FontSize="12"/>
                <TextBlock Grid.Column="1" Text="Department" Foreground="#64748B" FontWeight="SemiBold" FontSize="12"/>
                <TextBlock Grid.Column="2" Text="Position" Foreground="#64748B" FontWeight="SemiBold" FontSize="12"/>
                <TextBlock Grid.Column="3" Text="Assigned Assets" Foreground="#64748B" FontWeight="SemiBold" FontSize="12"/>
                <TextBlock Grid.Column="4" Text="Added" Foreground="#64748B" FontWeight="SemiBold" FontSize="12"/>
                <TextBlock Grid.Column="5" Text="Action" Foreground="#64748B" FontWeight="SemiBold" FontSize="12" HorizontalAlignment="Center"/>
            </Grid>
        </Grid>

        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="EmployeeItemsControl">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="White" BorderBrush="#E2E8F0" BorderThickness="0,0,0,1" Padding="20,12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2.5*"/>
                                    <ColumnDefinition Width="1.5*"/>
                                    <ColumnDefinition Width="1.5*"/>
                                    <ColumnDefinition Width="1.5*"/>
                                    <ColumnDefinition Width="1.5*"/>
                                    <ColumnDefinition Width="80"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Orientation="Horizontal">
                                    <Border Width="36" Height="36" CornerRadius="18" Background="#DBEAFE">
                                        <TextBlock Text="{Binding Initials}" VerticalAlignment="Center" HorizontalAlignment="Center" 
                                                   Foreground="#2563EB" FontWeight="Bold" FontSize="12"/>
                                    </Border>
                                    <StackPanel Margin="12,0,0,0" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding FullName}" FontWeight="SemiBold" Foreground="#1E293B" FontSize="14"/>
                                        <TextBlock Text="{Binding Email}" Foreground="#64748B" FontSize="12"/>
                                    </StackPanel>
                                </StackPanel>

                                <TextBlock Grid.Column="1" Text="{Binding Department}" VerticalAlignment="Center" Foreground="#475569"/>
                                <TextBlock Grid.Column="2" Text="{Binding JobTitle}" VerticalAlignment="Center" Foreground="#475569"/>

                                <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center">
                                    <materialDesign:PackIcon Kind="PackageVariant" Width="16" Height="16" Margin="0,0,8,0" Foreground="#94A3B8"/>
                                    <TextBlock Text="{Binding Assets.Count}" Foreground="#475569"/>
                                    <TextBlock Text=" assets" Foreground="#475569"/>
                                </StackPanel>

                                <TextBlock Grid.Column="4" 
                                           Text="{Binding DateAdded, StringFormat=\{0:MMM dd\, yyyy\}}" 
                                           VerticalAlignment="Center" 
                                           Foreground="#64748B"/>

                                <Button Grid.Column="5" 
                                        Click="BtnDelete_Click"
                                        Style="{StaticResource MaterialDesignIconButton}"
                                        Width="30" Height="30"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center">
                                    <materialDesign:PackIcon Kind="DeleteOutline" Foreground="#EF4444" Width="20" Height="20"/>
                                </Button>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>