<Window x:Class="AssetHub.ConfirmDeleteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Confirm Delete" Height="250" Width="400" 
        WindowStartupLocation="CenterOwner" WindowStyle="None" 
        AllowsTransparency="True" Background="Transparent">

    <Border Background="White" CornerRadius="16" BorderBrush="#E2E8F0" BorderThickness="1" Margin="10">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" Direction="270" ShadowDepth="2" Opacity="0.1"/>
        </Border.Effect>

        <Grid Margin="25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,15">
                <Border Width="45" Height="45" CornerRadius="22" Background="#FEE2E2">
                    <TextBlock Text="⚠️" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Border>
                <TextBlock Text="Delete Employee" FontSize="20" FontWeight="Bold" 
                           Foreground="#1E293B" VerticalAlignment="Center" Margin="15,0,0,0"/>
            </StackPanel>

            <TextBlock x:Name="TxtMessage" Grid.Row="1" TextWrapping="Wrap" 
                       FontSize="14" Foreground="#64748B" LineHeight="20"
                       Text="Are you sure you want to delete this employee?"/>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Cancel" IsCancel="True" Background="Transparent" 
                        Foreground="#64748B" BorderThickness="0" Margin="0,0,10,0" Padding="15,0" Cursor="Hand"/>

                <Button Content="Confirm Delete" Click="BtnConfirm_Click" 
                        Background="#EF4444" Foreground="White" BorderThickness="0" 
                        Padding="20,5" FontWeight="SemiBold" Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>