<Window x:Class="AssetHub.EmployeeDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Employee Details" Height="520" Width="600"
        WindowStartupLocation="CenterOwner" Background="#F8FAFC">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Background="White" Padding="30" BorderBrush="#E2E8F0" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal">
                    <Border Width="70" Height="70" CornerRadius="35" Background="#DBEAFE">
                        <TextBlock x:Name="TxtInitials" Text="JD" FontSize="24" FontWeight="Bold" 
                                   Foreground="#2563EB" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                    <StackPanel Margin="20,0,0,0" VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Name="TxtFullName" Text="Employee Name" FontSize="24" FontWeight="Bold" Foreground="#1E293B"/>

                            <Button x:Name="BtnEditEmployee"
                Click="BtnEditEmployee_Click"
                Style="{StaticResource MaterialDesignIconButton}"
                Width="30" Height="30" Margin="10,0,0,0"
                Foreground="#64748B" ToolTip="Edit Employee Details">
                                <materialDesign:PackIcon Kind="PencilOutline" Width="18" Height="18"/>
                            </Button>
                        </StackPanel>
                        <TextBlock x:Name="TxtJobTitle" Text="Software Engineer" FontSize="14" Foreground="#64748B"/>
                    </StackPanel>
                </StackPanel>

                <Button Grid.Column="1" x:Name="BtnReturnAll" 
                        Click="BtnReturnAll_Click"
                        Content="RETURN ALL" 
                        Style="{StaticResource MaterialDesignOutlinedButton}" 
                        Foreground="#EF4444" BorderBrush="#EF4444"
                        Height="35" Padding="15,0"
                        materialDesign:ButtonAssist.CornerRadius="18"
                        VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="Currently Assigned Assets" FontSize="16" FontWeight="Bold" Foreground="#1E293B" Margin="0,0,0,15"/>

            <Grid Grid.Row="1">
                <StackPanel x:Name="EmptyStatePanel" 
                            VerticalAlignment="Center" 
                            HorizontalAlignment="Center"
                            Visibility="Collapsed">
                    <materialDesign:PackIcon Kind="PackageVariant" Width="48" Height="48" Foreground="#CBD5E1" HorizontalAlignment="Center"/>
                    <TextBlock Text="No assets currently assigned" Foreground="#94A3B8" FontSize="14" Margin="0,10,0,0"/>
                </StackPanel>

                <ScrollViewer x:Name="AssetsScrollViewer" VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="AssignedAssetsControl">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="White" BorderBrush="#F1F5F9" BorderThickness="1" CornerRadius="8" Padding="15" Margin="0,0,0,10">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <materialDesign:PackIcon Kind="Laptop" Foreground="#94A3B8" VerticalAlignment="Center"/>

                                        <StackPanel Grid.Column="1" Margin="15,0">
                                            <TextBlock Text="{Binding AssetName}" FontWeight="SemiBold" Foreground="#334155"/>
                                            <TextBlock Text="{Binding SerialNumber}" FontSize="12" Foreground="#94A3B8"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,10,0">
                                            <TextBlock Text="{Binding AssetType}" 
                                                       Foreground="#64748B" 
                                                       FontSize="11" 
                                                       HorizontalAlignment="Right"/>
                                            <TextBlock Text="{Binding Price, StringFormat=\{0:C2\}}" 
                                                       Foreground="#2563EB" 
                                                       FontWeight="SemiBold"
                                                       FontSize="13"
                                                       HorizontalAlignment="Right"/>
                                        </StackPanel>

                                        <Button Grid.Column="3" 
                                                Click="BtnUnassignIndividual_Click"
                                                Style="{StaticResource MaterialDesignIconButton}"
                                                Width="32" Height="32"
                                                ToolTip="Unassign this asset"
                                                Foreground="#EA580C">
                                            <materialDesign:PackIcon Kind="LinkOff" Width="20" Height="20" />
                                        </Button>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>

            <Border Grid.Row="2" x:Name="TotalValueBorder" 
                    Background="#F1F5F9" 
                    CornerRadius="8" 
                    Padding="15,10" 
                    Margin="0,15,0,0">
                <Grid>
                    <TextBlock Text="Total Equipment Value" VerticalAlignment="Center" Foreground="#64748B" FontWeight="SemiBold"/>
                    <TextBlock x:Name="TxtTotalEmployeeValue" 
                               Text="₱0.00" 
                               HorizontalAlignment="Right" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               Foreground="#1E293B"/>
                </Grid>
            </Border>

            <Button Grid.Row="3" Content="Close Details" Click="BtnClose_Click" HorizontalAlignment="Right" Margin="0,20,0,0"
                    Style="{StaticResource MaterialDesignFlatButton}" Foreground="#64748B"/>
        </Grid>
    </Grid>
</Window>