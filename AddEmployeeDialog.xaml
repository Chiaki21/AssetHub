<UserControl x:Class="AssetHub.AddEmployeeDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Width="400" Padding="30" Background="White">

    <StackPanel>
        <TextBlock Text="Add New Employee" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" Foreground="#1E293B"/>

        <TextBlock Text="Full Name" Foreground="Gray" Margin="0,0,0,5"/>
        <TextBox x:Name="txtName" Height="40" VerticalContentAlignment="Center" Margin="0,0,0,15"/>

        <TextBlock Text="Email Address" Foreground="Gray" Margin="0,0,0,5"/>
        <TextBox x:Name="txtEmail" Height="40" VerticalContentAlignment="Center" Margin="0,0,0,15"/>

        <TextBlock Text="Job Title" Foreground="Gray" Margin="0,0,0,5"/>
        <TextBox x:Name="txtJob" Height="40" VerticalContentAlignment="Center" Margin="0,0,0,15"/>

        <TextBlock Text="Department" Foreground="Gray" Margin="0,0,0,5"/>
        <ComboBox x:Name="cmbDept" Height="40" VerticalContentAlignment="Center" Margin="0,0,0,30">
            <ComboBoxItem Content="IT"/>
            <ComboBoxItem Content="HR"/>
            <ComboBoxItem Content="Operations"/>
            <ComboBoxItem Content="Logistics"/>
        </ComboBox>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="CANCEL" Click="BtnCancel_Click" Background="Transparent" Foreground="Gray" BorderBrush="Transparent" Margin="0,0,10,0"/>

            <Button Content="SAVE EMPLOYEE" Click="BtnSave_Click" Background="#2563EB" BorderBrush="#2563EB" Foreground="White" Padding="20,0"/>
        </StackPanel>
    </StackPanel>
</UserControl>