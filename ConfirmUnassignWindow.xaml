<Window x:Class="AssetHub.ConfirmUnassignWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Confirm Unassign" Height="220" Width="400"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        AllowsTransparency="True" WindowStyle="None" Background="Transparent">

    <Border Background="White" CornerRadius="12" BorderThickness="1" BorderBrush="#E2E8F0">
        <StackPanel Margin="25">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                <materialDesign:PackIcon Kind="Information" Foreground="#3B82F6" Width="28" Height="28"/>
                <TextBlock Text="Confirm Unassignment" FontSize="18" FontWeight="Bold" Margin="10,0,0,0" VerticalAlignment="Center"/>
            </StackPanel>

            <TextBlock x:Name="TxtMessage" TextWrapping="Wrap" FontSize="14" Foreground="#64748B" LineHeight="20">
    Are you sure you want to unassign <Bold><Run x:Name="TxtAssetName"/></Bold>? This asset will be returned to the available inventory.
            </TextBlock>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,25,0,0">
                <Button Content="CANCEL" IsCancel="True" Click="BtnCancel_Click" Background="Transparent" BorderBrush="Transparent" Foreground="#64748B" Margin="0,0,10,0"/>
                <Button Content="UNASSIGN ASSET" Click="BtnConfirm_Click" Background="#3B82F6" BorderBrush="#3B82F6" Foreground="White" FontWeight="Bold" Padding="20,0"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>