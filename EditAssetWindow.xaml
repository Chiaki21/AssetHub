<Window x:Class="AssetHub.EditAssetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Asset" Height="400" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Edit Asset Details" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

            <TextBlock Text="Asset Name:"/>
            <TextBox x:Name="TxtAssetName" Height="30" Margin="0,0,0,10"/>

            <TextBlock Text="Asset Type:"/>
            <ComboBox x:Name="CbAssetType" Height="30" Margin="0,0,0,10">
                <ComboBoxItem Content="Laptop"/>
                <ComboBoxItem Content="Monitor"/>
                <ComboBoxItem Content="Mobile"/>
                <ComboBoxItem Content="Peripheral"/>
                <ComboBoxItem Content="Software"/>
                <ComboBoxItem Content="General"/>
            </ComboBox>

            <TextBlock Text="Serial Number:" Margin="0,5,0,0"/>
            <TextBox x:Name="TxtSerialNumber" Height="30" Margin="0,0,0,20" IsReadOnly="True" Background="#EEE"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Cancel" Width="80" Height="30" Margin="0,0,10,0" Click="BtnCancel_Click"/>
                <Button Content="Save Changes" Width="100" Height="30" Background="#007ACC" Foreground="White" Click="BtnSave_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>